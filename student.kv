Screen:
    NavigationLayout:
        ScreenManager:
            id: master
            LogInScreen:
                name: "logIn"
            HotelScreen:
                name: "hotel"
            BillScreen:
                name: "bill"
            previousOrderScreen:
                name: "history"
            previousOrderIndividualDetails:
                name: "orderIndividualDetails"

        NavDrawer:
            id: nav_drawer
            swipe_edge_width: 0
            BoxLayout:
                orientation: 'vertical'
                MDLabel:
                    id: navDrawLbl
                    font_style: 'H4'
                MDIcon:
                    icon: 'fruit-cherries'
                    font_size: '75sp'
                    halign: 'center'
                ScrollView:
                    MDList:
                        OneLineAvatarIconListItem:
                            text: "Home"
                            on_release: root.ids.nav_drawer.goToHome()
                            IconLeftWidget:
                                icon: 'home'

                        OneLineAvatarIconListItem:
                            text: "Orders"
                            on_release: root.ids.master.current = "history"
                            IconLeftWidget:
                                icon: 'history'

                        OneLineAvatarIconListItem:
                            text: "LogOut"
                            on_release: root.ids.nav_drawer.logOut()
                            IconLeftWidget:
                                icon: 'power'


<LogInScreen>:
    name: "logIn"
    MDScreen:
        md_bg_color: [1,1,51/255.0,0.6]
        #md_bg_color: [0,0,1,0.7]
        MDIcon:
            icon: "blah-blah"
            font_size: 85
            pos_hint: {'center_x': 0.5, 'center_y':0.9}
            halign: 'center'
        MDLabel:
            text: 'Welcome!'
            font_style: 'H2'
            halign: 'center'
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 20
            pos_hint: {'center_y' : 0.75}

        AnimCard:
            id: animCard_logIn
            orientation: 'vertical'
            padding:'8sp'
            pos_hint:{'center_x': 0.5, 'center_y': 0.4}
            size_hint:(0.9, 0.45)
            GridLayout:
                rows: 4
                padding: 25
                MDTextField:
                    id: username
                    hint_text: "Username"
                    helper_text: "Username is case sensitive"
                    helper_text_mode: 'on_focus'
                    required: True
                    icon_right: 'account'
                    multiline: False
                    size_hint: (0.8, 0.3)
                    pos_hint: {'center_x': 0.5, 'center_y':0.9}
                MDTextField:
                    id: password
                    hint_text: "Enter the password"
                    helper_text: "password is case sensitive"
                    helper_text_mode: 'on_focus'
                    icon_right: 'eye-off'
                    password: True
                    required: True
                    size_hint: (0.8, 0.3)
                    pos_hint: {'center_x': 0.5, 'center_y':0.5}
                MDLabel:
                    text: ""
                    size_hint: (0.8, 0.15)
                MDFillRoundFlatIconButton:
                    id: submit
                    text: 'Log In'
                    icon: 'check'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.1}
                    size_hint: (0.8, 0.25)
                    md_bg_color: (128/255.0,128/255.0,1/255.0,1)
                    text_color: (0,0,0,1)
                    on_release: root.logIn_verify()

<TopToolbar>:
    id: top_Toolbar
    left_action_items: [['menu', lambda x: root.openNavigationDraw()]]
    elevation: 10


<previousOrderScreen>:
    BoxLayout:
        orientation: 'vertical'
        TopToolbar:
            pos_hint: {'top': 1}

        ScrollView:
            MDList:
                id: historySummary
                cols: 1
                adaptive_height: True

<previousOrderIndividualDetails>:
    TopToolbar:
        pos_hint: {'top': 1}

    BoxLayout:
        padding: 15
        size_hint_x: 0.9
        pos_hint: {'center_x': 0.5, 'center_y': 0.825}

        MDLabel:
            id: bill_totalPay
            font_style: 'H6'

    GridLayout:
        pos_hint: {'center_x': 0.5, 'center_y': 0.7}
        cols: 4
        padding: 20
        MDLabel:
            text: 'Dish'
        MDLabel:
            text: 'Qty'
        MDLabel:
            text: 'Rate'
        MDLabel:
            text: 'Price'

    ScrollView:
        pos_hint:{'center_x': 0.5, 'center_y': 0.4}
        size_hint:(1, 0.5)
        MDList:
            md_bg_color: (153/255,153/255,153/255,0.5)
            id: previous_order_dish_list

    MDLabel:
        id: comment
        pos_hint:{'center_y': 0.1, 'x': 0.1}

    MDFillRoundFlatButton:
        id: deleteOrderBtn
        text: 'Delete Order'
        md_bg_color: (0,0.75,0.25,1)
        size_hint_x: 1.25
        pos_hint: {'center_x': 0.5}
        on_release: root.deleteOrder()
        disabled: True


<HotelScreen>:
    TopToolbar:
        pos_hint: {'top': 1}

    Spinner:
        id: hotelNames_spinner
        text: 'Select Hotel'
        size_hint: (0.9, 0.1)
        pos_hint: {'x': 0.05, 'center_y': 0.8}
        on_text: root.dish_filler(hotelNames_spinner.text)

    MDCard:
        orientation: 'vertical'
        padding:'8sp'
        pos_hint:{'center_x': 0.5, 'center_y': 0.45}
        size_hint:(0.9, 0.55)

        ScrollView:
            MDList:
                id: list_dish

    MDBottomAppBar:
        MDToolbar:
            id: bottomToolbar
            icon: "arrow-right"
            type: "bottom"
            #left_action_items: [["menu", lambda x: x]]
            mode: "end"
            on_action_button: root.proceed_to_bill()

<BillScreen>:
    TopToolbar:
        pos_hint: {'top': 1}

    BoxLayout:
        padding: 15
        size_hint_x: 0.9
        pos_hint: {'center_x': 0.5, 'center_y': 0.825}
        MDIcon:
            icon: 'food'
            font_size: '75sp'

        MDLabel:
            id: bill_hotelName
            font_style: 'H6'

    MDCard:
        orientation: 'vertical'
        #padding:'8sp'
        pos_hint:{'center_x': 0.5, 'top': 0.75}
        size_hint:(0.9, 0.4)

        ScrollView:
            MDList:
                id: toBill_ScrollView

    GridLayout:
        cols:2
        padding: 15
        size_hint: (0.9, 0.2)
        pos_hint: {'center_x': 0.5, 'top': 0.35}
        MDLabel:
            text: "To Pay"

        MDLabel:
            id: billTotalAmountToPay_id
            halign: 'center'

        MDLabel:
            text: "Pick up dish at"

        MDLabel:
            id: bill_timeLbl
            text: "00:00"
            halign: 'center'

        MDTextButton:
            text: "Set Time"
            on_release: root.show_time_picker()

    MDFillRoundFlatButton:
        id: billConfirmBtn
        text: 'Confirm order'
        md_bg_color: (0,0.75,0.25,1)
        size_hint_x: 1.25
        pos_hint: {'center_x': 0.5}
        on_release: root.placeOrder()
        disabled: True
